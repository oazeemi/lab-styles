<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#4b2e83</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Label" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gold" parent="@style/Label">
        <item name="android:background">#b7a57a</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Button" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>


</resources>
